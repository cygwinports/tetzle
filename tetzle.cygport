inherit qt4-qmake

NAME="tetzle"
VERSION=2.0.2.1
RELEASE=1
CATEGORY="Games"
SUMMARY="Qt jigsaw puzzle game"
DESCRIPTION="Tetzle is a jigsaw puzzle game that uses tetrominoes for the
pieces. Any image can be imported and used to create puzzles with a wide
range of sizes. Games are saved automatically, and you can select between
currently in progress games."
HOMEPAGE="http://gottcode.org/tetzle/"
SRC_URI="http://gottcode.org/tetzle/${NAME}-${VERSION}-src.tar.bz2"

CYGQMAKE4_ARGS="PREFIX=/usr"
